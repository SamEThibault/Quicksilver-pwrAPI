                    <src type="child" name="core0" />
                    <src type="child" name="core1" />
                    <src type="child" name="core2" />
                    <src type="child" name="core3" />
                </attr>
            </attributes>
            <children>
                <child name="core0"/>
                <child name="core1"/>
                <child name="core2"/>
                <child name="core3"/>
            </children>
        </obj>
